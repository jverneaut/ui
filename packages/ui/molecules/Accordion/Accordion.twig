<div data-component="Accordion">
  {% for item in items %}
    {% set is_open = item.attr.data_option_is_open ?? false %}
    <div data-component="AccordionItem" {{ html_attributes(item.attr ?? {}) }}>
      <button data-ref="btn" class="block w-full" aria-expanded="{{ is_open ? 'true' : 'false' }}">
        {% block title %}
          {{ item.title }}
        {% endblock %}
      </button>
      <div
        data-ref="container"
        style="{{ html_styles({ visibility: is_open ? '' : 'hidden', height: is_open ? '' : '0' }) }}"
        class="relative overflow-hidden">
        <div data-ref="content" aria-hidden="true">
          {% block content %}
            {{ item.content }}
          {% endblock %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
