<div data-component="Accordion">
  {% for item in items %}
    <div data-component="AccordionItem">
      <button data-ref="btn" class="block font-bold" aria-expanded="false">
        {{ item.title }}
      </button>
      <div data-ref="container" style="{{ html_styles({ visibility: 'hidden', height: 0 }) }}" class="relative overflow-hidden">
        <div data-ref="content" aria-hidden="true">
          {{ item.content }}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
